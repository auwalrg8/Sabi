rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Device registrations - only server can read/write
    // Access controlled via Admin SDK (not client)
    match /devices/{deviceId} {
      allow read, write: if false;
    }
    
    // Pubkey to device mapping
    match /pubkey_devices/{pubkey} {
      allow read, write: if false;
    }
    
    // Block all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
